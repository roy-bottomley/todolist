.weather
  %img{'ng-src'=>"{{location.url}}"}
  {{location.condition}} degrees {{location.temperature}}
  %br
  {{location.title}}
  %br
  {{location.text}}
  Forecast:
  %br
  %div{'ng-repeat' => 'forecast in location.forecasts'}
    {{forecast.day}} - {{forecast.text}}.  High: {{forecast.high}} Low: {{forecast.low}}
    %br
  More information
  %br
  %span
    %a{'ng-href'=>"{{location.link}}"} here